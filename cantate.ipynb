def analyze_week(target_date: date):
    lit_dates = get_liturgical_dates(target_date.year)
    monday = target_date - timedelta(days=target_date.weekday())
    headers = {'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36'}

    print(f"\n{'='*75}")
    print(f"ğŸ¹ BACH COMPANION - Settimana del {target_date.year}")
    print(f"Periodo: {monday.strftime('%d %b')} â€” {(monday+timedelta(days=6)).strftime('%d %b %Y')}")
    print(f"{'='*75}\n")

    suffixes = [""] + [str(i) for i in range(1, 11)]

    for i in range(7):
        current = monday + timedelta(days=i)
        occ = lit_dates.get(current, "Feria")
        print(f"ğŸ—“ï¸ {current.strftime('%a %d %b')} -> {occ}")

        for bwv, title in db.get(occ, []):
            b_num = bwv.split('/')[0] if '/' in bwv else bwv
            print(f"   ğŸ¼ BWV {bwv}: {title}")

            # 1. Link All of Bach (Netherlands Bach Society)
            # Nota: il formato BWV nel loro sito Ã¨ spesso bwv-153
